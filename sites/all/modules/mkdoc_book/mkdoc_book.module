function mkdoc_book_getBookFolder($bookId) {

	$tableName = 'mkdocids';
	if(db_table_exists($tableName)) {
		$query = "select bookfolder from {$tableName} where bookid=%d";
		$ret = db_query($query, $bookId);

		if(count($ret) > 0) {
			$data = db_fetch_array($ret);

			if($data != FALSE) {
				return $data['bookfolder'];	
			}
		}
	}
	return false;	
}

